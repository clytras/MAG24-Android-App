<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/splash_background_selector"
              android:orientation="vertical" >

    <ImageView
            android:id="@+id/mag_splash_logo"
            android:layout_width="253dp"
            android:layout_height="65dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/mag_logo_white_w800"
            android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"/>

    <RelativeLayout
            android:id="@+id/reload_ph"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:layout_above="@+id/wiznet_logo_ph"
            android:layout_weight="1">

        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:id="@+id/top_title_separator"
                android:visibility="visible"
                android:background="@android:color/white"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />
        <TextView
                android:id="@+id/no_inet_connection"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="MAG24.GR Android Application"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="#ffffff"
                android:background="#AAD6234A"
                android:textSize="20sp"
                android:typeface="sans"

                android:layout_alignLeft="@+id/top_title_separator" android:layout_below="@+id/top_title_separator"/>

        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:id="@+id/top_title_separator2"
                android:visibility="visible"
                android:background="@android:color/darker_gray"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/no_inet_connection"

                />

        <TextView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="Έκδοση:"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:typeface="sans"
                android:layout_alignParentLeft="true" android:layout_below="@+id/top_title_separator2"
                android:padding="6dp" android:background="#444444"/>
        <TextView android:id="@+id/about_version" android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:paddingLeft="6dp" android:paddingRight="6dp" android:text="@string/about_version"
                  android:textAppearance="@android:style/TextAppearance.Medium" android:textColor="#ffffff"
                  android:textSize="12sp" android:typeface="sans"
                  android:layout_alignLeft="@+id/top_title_separator" android:layout_below="@+id/info"
                  android:layout_margin="8dp"/>
        <TextView android:id="@+id/textView1" android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:paddingLeft="6dp" android:paddingRight="6dp" android:text="Ανάπτυξη εφαρμογής:"
                  android:textAppearance="@android:style/TextAppearance.Medium" android:textColor="#ffffff"
                  android:textSize="12sp" android:typeface="sans"
                  android:layout_alignLeft="@+id/top_title_separator" android:layout_below="@+id/about_version"
                  android:background="#444444" android:padding="6dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/top_title_separator"
            android:layout_below="@+id/textView1"
            android:layout_margin="8dp"
            android:maxLines="3"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="@string/about_develop_wiznet"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#ffffff"
            android:textColorLink="#1933ff"
            android:textSize="12sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/top_title_separator"
            android:layout_below="@+id/textView2"
            android:layout_margin="8dp"
            android:minLines="3"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="@string/about_develop_cl"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#ffffff"
            android:textColorLink="#1933ff"
            android:textSize="12sp"
            android:typeface="sans" />

    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/wiznet_logo_ph"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:visibility="visible"
            android:paddingBottom="6dp" android:gravity="bottom" android:layout_gravity="bottom">

        <ImageView
                android:id="@+id/wiznet_logo"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/wiznet_logo" />

    </RelativeLayout>



</LinearLayout>
