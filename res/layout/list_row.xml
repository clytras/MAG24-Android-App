<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="2dip" >

	<!--  ListRow Left sied Thumbnail image -->

	<LinearLayout
	    android:id="@+id/thumbnail"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_marginRight="5dip"
	    android:background="@drawable/image_bg"
	    android:padding="3dip" >

	    <ImageView
	        android:id="@+id/list_image"
	        android:layout_width="80dip"
	        android:layout_height="60dip"
	        android:layout_weight="19.74"
	        android:scaleType="centerCrop"
	        android:src="@drawable/no_image" />
	</LinearLayout>
    
	<!-- Title Of Song-->
    <com.wiznet.mag24gr.EllipsizingTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Rihanna Love the way lie"
        android:textColor="#040404"
        android:typeface="sans" 
        android:textSize="11sp"
        android:textStyle="bold"
        android:lines="2"
        android:maxLines="2"
	    android:ellipsize="end" />

	<!-- Artist Name -->

    <com.wiznet.mag24gr.EllipsizingTextView
        android:id="@+id/introtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thumbnail"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/thumbnail"
        android:ellipsize="end"
        android:singleLine="false"
        android:lines="3"
        android:maxLines="3"
        android:text="Your linear layout must have property orientation to be default ( not set) , try to set orientation = vertical, then you will see something new for what to tell"
        android:textColor="#343434"
        android:textSize="10dip" />

	<!-- Rightend Duration -->
      
     <!-- Rightend Arrow -->

</RelativeLayout>